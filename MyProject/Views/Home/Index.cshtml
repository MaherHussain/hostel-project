        </a>
    </div>
</div>


@****************MulighederListe************@
<div class="container-fluid" id="muliheder">
    <div class="row">
        @foreach (var item in Model)
        {


            <div class="col-lg-4 col-md-6" data-aos="fade-up">

                <div id="mulihedfoto">
                    <img src="~/Content/Img/cards-foto/@item.MulighedFoto" alt="Alternate Text" />
                </div>

                <div id="mulighedtext">
                    <h2>@item.MulighedOverskrift</h2>
                    <p>@Html.Raw(item.MulighedText)</p>

                </div>
            </div>


        }
    </div>
</div>


@****************booking************@
<div id="booking">

    <h2>Book overnatning på Aarhus Hostel</h2>
    <p>Bestil overnatning på Danmarks hyggeligste hostel! Vi sørger for at du kan sove trygt og godt i gode omgivelser.</p>
    <a href="#" class="btn-primary">book overnatning</a>
</div>

